<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Energia Ventosa</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom Styling */
        .navbar {
            background-color: #333;
        }
        .navbar a {
            color: gold;
            text-transform: uppercase;
            padding: 10px;
            font-size: 1.2rem;
        }
        .navbar a:hover {
            background-color: #444;
        }
        footer {
            background-color: #333;
            color: gold;
            text-align: center;
            padding: 15px 0;
        }
    </style>
</head>
<body class="bg-gray-800 text-white">
    <div class="min-h-screen">
        <!-- Navigation Bar -->
        <nav class="navbar">
            <div class="container mx-auto flex justify-between">
                <a href="/">Energia Ventosa</a>
                <div class="flex space-x-6">
                    <a href="/">Home</a>
                    <a href="/Home/About">About</a>
                    <a href="/Home/Data">Data</a>
                    <a href="/Home/Contact">Contact</a>
                    <a href="/Home/Login">Login</a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="py-8">
            @RenderBody() <!-- This is where page-specific content will be rendered -->
        </main>

        <!-- Footer -->
        <footer>
            <p>© 2024 - Energia Ventosa</p>
        </footer>
    </div>
</body>
</html>
